# (%b) %B => (un)set bold
# (%f) %F => (un)set color
# %n => username
# %~ => current directory
# %m => hostname

username='%F{green}%n%f'
current_dir='%B%F{blue}%1~%f%b'
git_branch=' on %F{yellow}%b%f'

# Formats the "vcs_info_msg_0_" variable
zstyle ':vcs_info:git:*' formats "$git_branch"

PROMPT='$username in $current_dir$vcs_info_msg_0_ %# '
RPROMPT='[%F{magenta}%?%f]'
