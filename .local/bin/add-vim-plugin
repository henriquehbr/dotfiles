#!/bin/dash

# description: install neovim plugins
# usage: add-vim-plugin <user/repo>
# author: Henrique Borges (@henriquehbr) <henriqueborgeshbr@gmail.com>

[ -z "$1" ] && echo "usage: add-vim-plugin <user/repo>" && exit 1

vim_plugin_dir="$XDG_DATA_HOME/nvim-plugins"

echo "==============================="
echo " Installing '$1' neovim plugin "
echo "==============================="

(cd "$vim_plugin_dir" || exit ; git --git-dir="$HOME/repos/dots" --work-tree="$HOME" submodule add "https://github.com/$1")
